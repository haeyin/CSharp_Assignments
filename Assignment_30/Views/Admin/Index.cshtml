@using Assignment_30.ViewModels
@model List<GetQuoteVm>

<div class="row m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">List of Quotes</h5>
        </div>
        <div class="card-body">
            @foreach (var getquote in Model)
            {
                <input type="hidden" name="Id" value="@getquote.Id" />
                <div class="row mb-3">
                    <div class="col-2">
                        @getquote.FirstName
                    </div>
                    <div class="col">
                        @getquote.LastName
                    </div>
                    <div class="col-4">
                        @getquote.EmailAddress
                    </div>
                    <div class="col">
                        placeholder
                    </div>
                </div>
            }
        </div>
    </div>
</div>
